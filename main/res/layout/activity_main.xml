<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_marginLeft="20dp"
    android:layout_height="fill_parent">
    <LinearLayout
        android:id="@+id/linearMain"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonUserCommand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="300dp"
            android:layout_y="0dp"
            android:layout_marginVertical="10dp"
            android:text="Katso omat arvostelut"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginVertical="10dp"
            android:textColor="#898989"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginRight="20dp"
            android:text="Tallentaaksesi omat arvostelut: Kirjoita ensin arvostelut, tämän jälkeen paina tallenna nappaia." />

        <Button
            android:id="@+id/SaveComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="0dp"
            android:layout_x="300dp"
            android:layout_y="0dp"
            android:text="Tallenna arvostelut"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginVertical="10dp"
            android:textColor="#898989"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Leffan ID:   Leffan nimi:" />


    </LinearLayout>
</ScrollView>